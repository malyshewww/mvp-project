extends includes/layout.pug

append variables
	- let pageTitle = "Страница входа";
	- description += pageTitle;
block content
	.auth 
		form(action="#").auth-form
			h1.auth-form__title Вход в личный кабинет
			.auth-form__items 
				.auth-form__item.form-item.icon-user-t
					input(type="email" placeholder="Электронная почта").auth-form__input.form-input
				.auth-form__item.form-item.icon-lock-t.error
					input(type="password" placeholder="Пароль").auth-form__input.form-input
					.form-error Неверный логин или пароль
			.auth-form__bottom
				input(type="submit", value="Войти").auth-form__button.btn.btn-red
				a(href="#").auth-form__link Восстановить пароль